name "reng"
description "RE NGINE FX (rengfx) game framework/engine"
authors "redthing1"
copyright "Copyright Â© 2020-2022, redthing1"
license "LGPL-3.0 or proprietary"
x:ddoxFilterArgs "--min-protection=Protected"
dependency "jar" version="~>0.1.0"
dependency "optional" version="~>1.3.0"
dependency "witchcraft" version="~>0.1.9"
dependency "colorize" version="~>1.0.5"
dependency "bindbc-loader" version="~>1.0.1"
dependency "dray" version=">=4.2.0-r1"
libs "raylib"
configuration "lib-standard" {
    targetType "library"

    # physics
    versions "physics"
    dependency "bindbc-newton" version="~>0.2.0"
}
configuration "lib-minimal" {
	targetType "library"
}
configuration "unittest" {
    # test runner
    dependency "silly" version="~>1.0.2"

    # - test additional features

    # physics
    versions "physics"
    dependency "bindbc-newton" version="~>0.2.0"
}
configuration "ddox" {
	targetType "library"
	versions "physics"
}
